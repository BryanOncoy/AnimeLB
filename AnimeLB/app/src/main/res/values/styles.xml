<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextSimple14">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSimple16">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSimple16White">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextError">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Widget.Theme.Projecto_pruebas.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Projecto_pruebas.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>